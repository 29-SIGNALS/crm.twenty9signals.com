<h1>Show All HOA'S</h1>
<section id="page">
  <table class="table-striped">
    <thead>
    <tr>
      <th>ID. </th>
      <th>HOA Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    <% @hoa.each do |i| %>
      <tr>
        <td><%= i.id.to_s %></td>
        <td><%= i.name %></td>
        <td><%= i.created_at.to_s %></td>
        <td><%= i.updated_at.to_s %></td>
        <td><a href='/hoa/<%= i.id%>/edit'>Edit</a></td>
        <td> <a href="<%= @delete %>/hoa/<%= i.id %> ">Delete</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <nav>
    <ol>
      <li><a href="/hoa">HOA Home</a></li>
      <li><a href="/hoa/new">New</a></li>

    </ol>
  </nav>
</section>